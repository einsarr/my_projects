{% extends 'accueil.html.twig' %}

{% block title %}SortieController!{% endblock %}

{% block body %}
<a class="btn btn-info" href=""> Enrégistrement d'une sortie</a><br>
    {% if message_error is defined %}
        <span class="text-danger">
        {{ message_error }}
        </span>
    {% endif %}
    <form method="POST" action="">
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="La date de sortie" name="dateS">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="La quantité" name="qteS">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
               <select class="form-control" name="produit">
                    <option value="">----Selectionner le produit ---</option>
                    {% for produit in produits %}
                    <option value="{{ produit.id }}">{{ produit.libelle }}</option>
                    {% endfor %}
               </select>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    </form>
{% endblock %}
