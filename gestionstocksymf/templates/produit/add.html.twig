{% extends 'accueil.html.twig' %}

{% block title %}ProduitController!{% endblock %}

{% block body %}
<a class="btn btn-info" href=""> Enrégistrement d'un produit</a><br>
    {% if message_error is defined %}
        <span class="text-danger">
        {{ message_error }}
        </span>
    {% endif %}
    <form method="POST" action="">
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Le libellé du produit" name="libelle">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Le prix unitaire du produit" name="qteStock">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    </form>
{% endblock %}
